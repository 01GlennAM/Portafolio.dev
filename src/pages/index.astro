---
import Layout from '../layouts/Layout.astro';
import Redes from '../components/Redes.astro';
import LinkedIn from '../components/icons/LinkedIn.astro';
import GitHubx from '../components/icons/GitHubx.astro';
import MailIcon from '../components/icons/Mail.astro';
import Section from '../components/icons/Section.astro';
import SectionContainer from '../components/SectionContainer.astro';
import IconoProyect from '../components/icons/IconoProyect.astro';
import Habilidades from '../components/Habilidades.astro';

// import Prueba from '../components/Prueba.astro';
import ComponenteUtilizable from '../components/ComponenteUtilizable.astro';


