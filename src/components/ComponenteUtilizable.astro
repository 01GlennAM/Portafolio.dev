---
import IconoProyect from './icons/IconoProyect.astro';
import GitHubx from './icons/GitHubx.astro';
import type { Icon } from 'astro/runtime/client/dev-toolbar/ui-library/icons.js';


export interface Props {
  title: string
  description: string
  image: string
  tags: string[]
  github?: string
  link?: string
  
}

const { title, description, image, tags, github, link } = Astro.props;
---

<article class="rounded shadow p-4 max-w-md w-full mx-auto mb-6 border-1 border-orange-500 hover:scale-102 ">
  <img src={image} alt={`imagen del proyecto ${title}`} class="w-full h-auto rounded mb-4" />

  <h3 class="text-xl font-bold mb-2 flex items-center gap-2 font-onest opacity-80">
    <slot name="icon" />
    {title}
  </h3>

  <p class="text-sm opacity-80 mb-3 text-gray-400 font-poppins text-left">{description}</p>

  <ul class="flex flex-wrap gap-2 text-xs mb-3">
    {tags.map(tag => (
      <li class="bg-gray-600 text-white px-2 py-1 rounded hover:bg-orange-400">{tag}</li>
    ))}
  </ul>

  <div class="flex gap-4">
    {github && (
      <a href="https://github.com/01GlennAM/proyecto-mokepones" target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:underline text-sm hover:scale-105">
      <GitHubx/>
      </a>
    )}
    {link && (
      <a href="https://github.com/01GlennAM/proyecto-mokepones" target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:underline text-sm hover:scale-105">
        Ver
      </a>
    )}
  </div>
</article>
